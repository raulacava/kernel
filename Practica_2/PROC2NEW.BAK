 * La Bolita
 */
#include <graphics.h>
#include <conio.h>

#define ESC 27

int main() {
	int x = 1, y = 1;
	int xs = 1, ys = 1;
	char key = 'o';
	struct text_info initial_info;

	gettextinfo(&initial_info);

//	clrscr();
	while (key != ESC) {
		if (kbhit()) key = getch();
		clrscr();
		gotoxy(x, y);
		putch(key);
		gotoxy(1, 1);
		x += xs;
		y += ys;
		if (x >= initial_info.screenwidth /2 || x <= 1) xs = -xs;
		if (y >= initial_info.screenheight/2 || y <= 1) ys = -ys;
		delay(100);
	}
	return 0;
}
